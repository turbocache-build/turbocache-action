{
  "name": "turbocache-action",
  "version": "1.1.1",
  "private": true,
  "description": "GitHub Action for Turbocache",
  "main": "lib/main.js",
  "scripts": {
    "build": "yarn tsc",
    "format": "yarn prettier --write .",
    "lint": "yarn eslint src/**/*.ts",
    "package": "yarn package:main && yarn package:post",
    "package:main": "ncc build src/main.ts --license licenses.txt -o dist/main",
    "package:post": "ncc build src/post.ts --license licenses.txt -o dist/post",
    "test": "yarn jest",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/turbocache-build/turbocache-action.git"
  },
  "keywords": [
    "actions",
    "turbo",
    "turbocache",
    "turborepo",
    "node"
  ],
  "author": "Turbocache",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.2",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vercel/ncc": "^0.36.1",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.39.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "js-yaml": "^4.1.0",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.8",
    "ts-jest": "^29.1.0",
    "turbo": "^1.9.3",
    "typescript": "^5.0.4"
  }
}
